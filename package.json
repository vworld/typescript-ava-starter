{
  "name": "typescript-ava-starter",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier \"src/**/*.ts\" --list-different",
    "prettier:fix": "prettier \"src/**/*.ts\" --write",
    "test": "ava",
    "test:build": "npm run build && ava",
    "coverage": "c8 ava",
    "coverage:build": "npm run build && c8 ava"
  },
  "ava": {
    "concurrency": 5,
    "failFast": true,
    "tap": false,
    "verbose": true,
    "files": [
      "src/tests/**/*.test.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": false
    },
    "timeout": "60s"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "ava": "^6.2.0",
    "c8": "^10.1.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
